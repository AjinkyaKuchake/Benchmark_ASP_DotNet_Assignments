
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container" style="background-color:white">
    <h3>Create Book</h3>
    <form action="/Books/Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="BookName">Book Name</label>
            <input type="text" class="form-control" id="BookName" name="BookName" placeholder="Book Name" />

            <label for="Price">Price</label>
            <input type="text" class="form-control" id="Price" name="Price" placeholder="Price" />

            <label for="Author">Author</label>
            <input type="text" class="form-control" id="Author" name="Author" placeholder="Author" />

            <label for="Genre">Genre</label>
            <input type="text" class="form-control" id="Genre" name="Genre" placeholder="Genre" />

            <label for="AvailabilityStatus">Availability Status</label>
            <select class="form-control" id="AvailabilityStatus" name="AvailabilityStatus">
                <option value="">Please Select</option>
                <option value="InStock">In Stock</option>
                <option value="OutOfStock">Out Of Stock</option>
            </select>

            <label for="PublicationID">Publication ID</label>
            <select class="form-control" id="PublicationID" name="PublicationID">
                <option value="">Please select</option>
                @foreach (var item in ViewBag.publications)
                {
                    <option value="@item.PublicationID">@item.PublicationName</option>
                }
            </select>

            <label for="Image">Image</label>
            <input type="file" class="form-control-file" id="Image" name="photo" placeholder="Publication ID" />

        </div>
        <button type="submit" class="btn btn-success">Create</button>
        <a class="btn btn-danger" href="/Books/Index">Cancel</a>
        <hr />
    </form>
</div>


